{
  "name": "poodle-main",
  "version": "0.0.1",
  "description": "Main Electron process for Poodle",
  "main": "lib/index.js",
  "author": {
    "name": "Jesse Hallett",
    "email": "jesse@sitr.us"
  },
  "license": "Apache-2.0",
  "private": true,
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Poodle"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc -b",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "watch 'yarn codegen' schema",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "cd ../.. && yarn prepare",
    "prepackage": "yarn run build",
    "package": "electron-forge package",
    "prestart": "yarn run build",
    "start": "electron-forge start",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "base64-stream": "^1.0.0",
    "better-queue": "^3.8.10",
    "better-sqlite3": "^5.4.0",
    "better-sqlite3-helper": "^2.0.2",
    "buildmail": "^4.0.1",
    "concat-stream": "^1.6.0",
    "electron-context-menu": "^0.13.0",
    "electron-is-dev": "^1.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "email-addresses": "^3.0.3",
    "encoding": "^0.1.12",
    "googleapis": "^40.0.0",
    "graphql": "^14.4.2",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^4.0.5",
    "graphql-transport-electron": "^1.0.1",
    "html-to-text": "^5.1.1",
    "iconv": "^2.3.4",
    "imap": "signpost/node-imap#master",
    "immutable": "^3.8.2",
    "kefir": "^3.8.6",
    "keytar": "^5.0.0-beta.0",
    "libqp": "^1.1.0",
    "lodash": "4.17.14",
    "mailparser": "^2.6.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.24.0",
    "node-email-reply-parser": "^0.1.1",
    "node-fetch": "^2.3.0",
    "node-uuid": "^1.4.8",
    "nodemailer": "^6.0.0",
    "xdg-basedir": "^3.0.0",
    "xoauth2": "^1.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.43",
    "@electron-forge/maker-deb": "^6.0.0-beta.43",
    "@electron-forge/maker-rpm": "^6.0.0-beta.43",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.43",
    "@electron-forge/maker-zip": "^6.0.0-beta.43",
    "@graphql-codegen/add": "^1.4.0",
    "@graphql-codegen/cli": "^1.4.0",
    "@graphql-codegen/typescript": "^1.4.0",
    "@graphql-codegen/typescript-resolvers": "^1.4.0",
    "@jest-runner/electron": "^2.0.2",
    "@types/better-queue": "^3.8.0",
    "@types/better-sqlite3": "^5.2.3",
    "@types/concat-stream": "^1.6.0",
    "@types/core-js": "^2.5.0",
    "@types/graphql": "^14.2.2",
    "@types/html-to-text": "^1.4.31",
    "@types/jest": "^24.0.14",
    "@types/kefir": "^3.8.1",
    "@types/lodash": "^4.14.136",
    "@types/mailparser": "^2.4.0",
    "@types/node": "12",
    "@types/node-fetch": "^2.1.7",
    "@types/node-uuid": "^0.0.28",
    "@types/nodemailer": "^4.6.7",
    "@types/xdg-basedir": "^2.0.0",
    "buffer-to-stream": "^1.0.0",
    "cross-env": "^5.2.0",
    "electron": "6",
    "electron-devtools-installer": "^2.2.4",
    "eol": "^0.9.1",
    "fast-deep-equal": "^2.0.1",
    "jest": "24.7.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2",
    "watch": "^1.0.2"
  }
}
