{
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "target": "esnext",
    "lib": ["esnext", "esnext.asynciterable"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "lib",
    "sourceMap": true,
    "incremental": true
  },
  "include": ["src", "../main/types"]
}
