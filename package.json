{
  "license": "Apache-2.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/client",
      "packages/common",
      "packages/main"
    ],
    "nohoist": [
      "**/*"
    ]
  },
  "scripts": {
    "codegen": "yarn workspaces run codegen",
    "diagram": "unflatten -l 3 assets/architecture.dot | dot -Tsvg -o assets/architecture.svg",
    "prepare": "bash scripts/prepare",
    "start": "bash scripts/dev",
    "test": "bash scripts/tests"
  },
  "prettier": {
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "git-format-staged -f 'prettier --stdin --stdin-filepath \"{}\"' '*.css' '*.graphql' '*.ts' '*.tsx'"
    }
  },
  "devDependencies": {
    "git-format-staged": "^2.1.0",
    "husky": "^3.1.0",
    "prettier": "^1.19.1",
    "typescript": "^3.7.4",
    "wait-on": "^3.3.0"
  }
}
